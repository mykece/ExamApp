@model TrainerAddedToClassromByAdminVM

@{
    ViewData["Title"] = ViewLocalizer["Add_Classroom"];
}

<section class="section dashboard d-flex justify-content-center align-items-center">
    <div class="card card-docs flex-row-fluid mb-2" id="kt_docs_content_card">
        <div class="card-header pt-7" id="kt_chat_contacts_header">
            <!--begin::Card title-->
            <div class="card-title m-0">
                <h3 class="fw-bolder m-0">@SharedLocalizer["Add_Classroom"]</h3>
            </div>
            <!--end::Card title-->
        </div>

        <div class="card-body fs-6 py-15 px-10 py-lg-15 px-lg-15 text-gray-700">
            <form class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-action="AddClassroom" method="post">
                <input type="hidden" asp-for="TrainerId" />
                <div class="fv-row fv-plugins-icon-container">
                    <label class="fw-bold fs-6 mb-2">@SharedLocalizer["Select_Classroom"]</label>
                    <select class="form-select form-select-solid" data-control="select2" data-close-on-select="false" data-placeholder=@SharedLocalizer["Select_Options"] data-allow-clear="true" multiple="multiple" asp-for="SelectedTClassroomIds">
                        @foreach (var listItem in Model.Classrooms)
                        {
                            if (!Model.SelectedTClassroomIds.Contains(Guid.Parse(listItem.Value)))
                            {
                                <option value="@listItem.Value">@listItem.Text</option>
                            }
                        }
                    </select>

                    <span asp-validation-for="SelectedTClassroomIds" class="text-danger"></span>
                </div>
                <div class="separator mb-6"></div>
                <div class="d-flex justify-content-end align-self-center">
                    <a asp-controller="Trainer" asp-action="Index" class="btn btn-primary align-self-center me-2">@SharedLocalizer["Back_List"]</a>
                    <button type="submit" class="btn btn-primary hover-elevate-up">
                        <a class="text-white indicator-label">@SharedLocalizer["Save"]</a>
                    </button>
                    @* <a asp-controller="Trainer" asp-action="AddClassroom" method="post" class="btn btn-primary align-self-center" data-kt-docs-table-filter="edit_row" data-bs-toggle="modal" data-bs-target="#kt_modal_update_user">@SharedLocalizer["Update"]</a> *@
                </div>

            </form>
        </div>
    </div>
</section>