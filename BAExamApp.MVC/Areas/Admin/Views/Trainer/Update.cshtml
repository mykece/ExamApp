@model AdminTrainerUpdateVM

@{
    ViewData["Title"] = SharedLocalizer["Update"];
}

<!--begin::Modal - Update user-->
<div class="modal fade" id="kt_modal_update_user" tabindex="-1" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered modal-md">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Modal header-->
            <div class="modal-header" id="kt_modal_update_user_header">
                <!--begin::Modal title-->
                <h2 class="fw-bolder">@SharedLocalizer["Update"]</h2>
                <!--end::Modal title-->
                <!--begin::Close-->
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-users-modal-action="close">
                    <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </div>
                <!--end::Close-->
            </div>
            <!--end::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body mx-1 mx-xl-1 my-7">
                <!--begin::Form-->
                <form asp-action="Update" id="kt_modal_update_user_form" class="form" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" name="Status" value="@((int)Model.Status)" />
                    <input type="hidden" asp-for="RemoveImage" id="RemoveImage" />
                    <!-- Single column layout -->
                    <div class="mb-7">
                        <div class="d-flex">
                            <!--begin::Input group - Image-->
                            <div class="me-7">
                                <div class="fv-row mb-7">
                                    <!--begin::Label-->
                                    <label class="d-block fw-bold fs-6 mb-5">@ViewLocalizer["Edit_Picture"]</label>
                                    <!--end::Label-->
                                    <!--begin::Image input-->
                                    <div class="mt-1">
                                        <div class="image-input image-input-outline" data-kt-image-input="true">
                                            <div id="profilePhoto" class="image-input-wrapper w-125px h-125px"></div>
                                            <label class="btn btn-icon btn-circle" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="@SharedLocalizer["Upload_Profile_Picture"]">
                                                <i class="bi bi-pencil-fill fs-7"></i>
                                                <input type="file" asp-for="NewImage" accept=".png, .jpg, .jpeg" />
                                                <input type="hidden" asp-for="Image" />
                                                <input type="hidden" name="avatar_remove" />
                                            </label>
                                            <span asp-validation-for="NewImage.Length" class="text-danger"></span>
                                            <span asp-validation-for="NewImage.ContentType" class="text-danger"></span>
                                            <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="@SharedLocalizer["Cancel_Profile_Picture"]">
                                                <i class="bi bi-x fs-2"></i>
                                            </span>
                                            <span id="removeImageBtn" class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-body" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="@SharedLocalizer["Remove_Profile_Picture"]">
                                                <i class="bi bi-x fs-2"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <!--end::Image input-->
                                    <!--begin::Hint-->
                                    <div class="form-text">@SharedLocalizer["Allowed_File_Types"]</div>
                                    <!--end::Hint-->
                                </div>
                            </div>
                            <!--end::Input group - Image-->
                            <!--begin::Input group - Gender-->
                            <div class="flex-grow-1">
                                <div class="fv-row mb-7">
                                    <div class="fv-row">
                                        <!--begin::Label-->
                                        <label asp-for="Gender" class="required fw-bold fs-6 mb-5"></label>
                                        <!--end::Label-->
                                    </div>
                                    <div class="d-flex flex-column fv-row">
                                        <!--begin::Radio-->
                                        <div class="form-check form-check-custom form-check-solid mb-3">
                                            <!--begin::Input-->
                                            <input asp-for="Gender" class="form-check-input" type="radio" value="true" id="kt_modal_update_role_option_0" checked='checked' />
                                            <!--end::Input-->
                                            <!--begin::Label-->
                                            <label class="form-check-label" for="kt_modal_update_role_option_0">
                                                <div class="fw-bolder text-gray-800">
                                                    @SharedLocalizer["Man"]
                                                </div>
                                            </label>
                                            <!--end::Label-->
                                        </div>
                                        <!--end::Radio-->
                                        <!--begin::Radio-->
                                        <div class="form-check form-check-custom form-check-solid">
                                            <!--begin::Input-->
                                            <input asp-for="Gender" class="form-check-input" type="radio" value="false" id="kt_modal_update_role_option_1" />
                                            <!--end::Input-->
                                            <!--begin::Label-->
                                            <label class="form-check-label" for="kt_modal_update_role_option_1">
                                                <div class="fw-bolder text-gray-800">@SharedLocalizer["Woman"]</div>
                                            </label>
                                            <!--end::Label-->
                                        </div>
                                        <!--end::Radio-->
                                    </div>
                                </div>
                            </div>
                            <!--end::Input group - Gender-->
                        </div>

                        <!--begin::Input group-->
                        <div class="fv-row form-floating mb-7">
                            <!--begin::Input-->
                            <input asp-for="FirstName" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="@SharedLocalizer["First_Name"]" />
                            <!--end::Input-->
                            <!--begin::Label-->
                            <label asp-for="FirstName" class="required fw-bold fs-6 mb-2 text-muted"></label>
                            <!--end::Label-->
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="fv-row form-floating
mb-7">
                            <!--begin::Input-->
                            <input asp-for="LastName" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="@SharedLocalizer["Last_Name"]" />
                            <!--end::Input-->
                            <!--begin::Label-->
                            <label asp-for="LastName" class="required fw-bold fs-6 mb-2 text-muted"></label>
                            <!--end::Label-->
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="fv-row form-floating mb-7">
                            <!--begin::Input-->
                            <input asp-for="Email" type="email" class="form-control form-control-solid mb-3 mb-lg-0" placeholder="ad.soyad@bilgeadam.com" />
                            <!--end::Input-->
                            <!--begin::Label-->
                            <label asp-for="Email" class="required fw-bold fs-6 mb-2 text-muted"></label>
                            <!--end::Label-->
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <!--end::Input group-->
                    </div>
                    <!--end::Scroll-->
                    <!--begin::Actions-->
                    <div class="text-center pt-15">
                        <button type="button" class="btn btn-light me-3"data-kt-users-modal-action="cancel"@*  onclick="returnToTrainerList()" *@>
                            @SharedLocalizer["Back_List"]
                        </button>
                        <button type="submit" class="btn btn-success" data-kt-users-modal-action="submit">
                            <span class="indicator-label">@SharedLocalizer["Save"]</span>
                            <span class="indicator-progress">
                                @SharedLocalizer["Please_Wait"]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                    <!--end::Actions-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Modal body-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal - Update user-->

<script>
    document.getElementById('removeImageBtn').addEventListener('click', function () {
        document.getElementById('RemoveImage').value = 'true';
    });
</script>


