@using BAExamApp.MVC.Areas.CandidateAdmin.Models.CandidateExamVMs
@model CandidateExamDetailsVM

<head>
	<style>
		.cursor {
			cursor: pointer;
		}
	</style>
</head>
<div class="card" id="kt_profile_details_view">
	<!-- Card Header -->
	<div class="card-header cursor-pointer">
		<div class="card-title m-0">
			<h3 class="fw-bolder m-0">@SharedLocalizer["Exam_Details"]</h3>
		</div>
		<div style="margin-block:auto">
			<a class="btn btn-primary text-center fs-5" type="button" asp-controller="CandidateExam" asp-action="Index">@SharedLocalizer["Back_List"]</a>
		</div>
	</div>

	<!-- Card Body for Exam Details -->

	<div class="card-body p-9">
		<div class="row">

			<div class="row mb-6 col-md-6">
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="Name">@SharedLocalizer["Exam_Name"]</label>
					</label>
					<div class="col-lg-8">
						<span class="fw-bolder fs-6 text-gray-800">@Model.Name</span>
					</div>
				</div>
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="ExamDateTime">@SharedLocalizer["Exam_Date_Time"]</label>
					</label>
					<div class="col-lg-8 fv-row">
						<span class="fw-bold text-gray-800 fs-6">@Model.ExamDateTime</span>
					</div>
				</div>
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="ExamDuration">@SharedLocalizer["Exam_Duration"]</label>
					</label>
					<div class="col-lg-8 fv-row">
						<span class="fw-bold text-gray-800 fs-6">@($"{Model.ExamDuration.Hours:D2}:{Model.ExamDuration.Minutes:D2}")</span>
					</div>
				</div>
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="Description">@SharedLocalizer["Description"]</label>
					</label>
					<div class="col-lg-8 fv-row">
						<span class="fw-bold text-gray-800 fs-6">@Model.Description</span>
					</div>
				</div>
			</div>


			<div class="row mb-6 col-md-6">
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="TestQuestionCount">@SharedLocalizer["Test"]</label>
					</label>
					<div class="col-lg-8 fv-row">
						<span class="fw-bold text-gray-800 fs-6">@Model.TestQuestionCount</span>
					</div>
				</div>
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="ClassicQuestionCount">@SharedLocalizer["Classic"]</label>
					</label>
					<div class="col-lg-8 fv-row">
						<span class="fw-bold text-gray-800 fs-6">@Model.ClassicQuestionCount</span>
					</div>
				</div>
				<div class="row mb-1">
					<label class="col-lg-4 fw-bold text-muted">
						<label asp-for="AlgorithmQuestionCount">@SharedLocalizer["Algorithm"]</label>
					</label>
					<div class="col-lg-8 fv-row">
						<span class="fw-bold text-gray-800 fs-6">@Model.AlgorithmQuestionCount</span>
					</div>
				</div>

			</div>
		</div>
	</div>

	<div class="card" id="kt_profile_details_view">

		<div class="table-listing-section">
			<div class="card" id="kt_profile_details_view">
				<!-- Card Body for Table Listing -->
				<div class="card-body p-9">
					<h1 class="anchor fw-bold mb-5" id="server-side">
						<h5 class="card-title">@SharedLocalizer["Candidate_List"]</h5>
					</h1>
					<div class="d-flex flex-stack flex-wrap mb-5">
						<!--begin::Search-->
						<div class="d-flex align-items-center position-relative my-1 mb-2 mb-md-0">
							<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
							<span class="svg-icon svg-icon-1 position-absolute ms-6">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
									<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
									<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
								</svg>
							</span>
							<!--end::Svg Icon-->
							<input type="text" id="searchInput" data-kt-docs-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="@SharedLocalizer["Search"]" />
						</div>
						<!--end::Search-->
						<!--begin::Toolbar-->
						<div class="d-flex justify-content-end" data-kt-docs-table-toolbar="base">
							<!--begin::Filter-->
							<!--end::Menu 1-->
							<!--end::Filter-->
							<!--begin::Add customer-->

						</div>
					</div>
					<table id="kt_datatable_example_1" class="table table-row-dashed fs-6 gy-5">
						<!-- Table Headers -->
						<thead>
							<tr class="categories text-left">
								<td class="text-left fw-bold text-black">@SharedLocalizer["Full_Name"]</td>
								<td class="text-left fw-bold text-black">Email</td>
								<td class="text-left fw-bold text-black">@SharedLocalizer["Score"]</td>
								<td class="text-left fw-bold text-black">@SharedLocalizer["Operations"]</td>
							</tr>
						</thead>
						<tbody id="list" class="text-gray-600 fw-bold">
							@foreach (var item in Model.CandidateList.OrderBy(x => x.FirstName))
							{
								<tr>
									<!-- Student Name -->
									<td id="listName" class="text-left">@item.FirstName @item.LastName</td>
									<td id="listEmail" class="text-left">@item.Email</td>
									<td class="text-left">@item.Score/@Model.MaxScore</td>
									<!-- Assessment Button -->
									<td class="text-left">
										<a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
											@SharedLocalizer["Options"]
											<span class="svg-icon fs-5 m-0">
												<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
													<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
														<polygon points="0 0 24 0 24 24 0 24"></polygon>
														<path d="M6.70710678,15.7071068 C6.31658249,16.0976311 5.68341751,16.0976311 5.29289322,15.7071068 C4.90236893,15.3165825 4.90236893,14.6834175 5.29289322,14.2928932 L11.2928932,8.29289322 C11.6714722,7.91431428 12.2810586,7.90106866 12.6757246,8.26284586 L18.6757246,13.7628459 C19.0828436,14.1360383 19.1103465,14.7686056 18.7371541,15.1757246 C18.3639617,15.5828436 17.7313944,15.6103465 17.3242754,15.2371541 L12.0300757,10.3841378 L6.70710678,15.7071068 Z" fill="currentColor" fill-rule="nonzero" transform="translate(12.000003, 11.999999) rotate(-180.000000) translate(-12.000003, -11.999999)"></path>
													</g>
												</svg>
											</span>
										</a>

										<!--begin::Menu-->
										<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
											<div class="menu-item px-3">
												<a asp-controller="CandidateExam" asp-action="CandidateExamDetails" asp-route-examId="@Model.Id" asp-route-candidateId="@item.Id" class="menu-link px-3" data-kt-docs-table-filter="edit_row">@SharedLocalizer["Questions"]</a>
											</div>

											<div class="menu-item px-3">
												<a href="@Url.Action("Details", "Candidate", new { id = item.Id, activeTab = "kt_tab_pane_8" })" class="menu-link px-3" data-kt-docs-table-filter="edit_row">@SharedLocalizer["Exams"]</a>
											</div>

											@* <div class="menu-item px-3">
												<a asp-controller="CandidateExamEvaluation" asp-action="CandidateExamQuestions" asp-route-examId="@Model.Id" asp-route-candidateId="@item.Id" class="menu-link px-3" data-kt-docs-table-filter="edit_row">Değerlendir</a>
											</div> *@

										</div>
										<!--end::Menu-->
									</td>

								</tr>
							}
						</tbody>
					</table>
					<div id="empty" class="text-center mb-5">
						@SharedLocalizer["Empty_List"]
					</div>
					<div class="row">
						<div class="form-group col-md-1">
							<select class="form-select form-select-sm form-select-solid" id="itemsPerPage">
								<option value="5">5</option>
								<option value="10">10</option>
								<option selected value="20">20</option>
								<option value="50">50</option>
							</select>
						</div>
						<div id="pagination" class="col-md-10">
						</div>
						<div class="col-md-1"></div>
					</div>

				</div>
			</div>
		</div>

	</div>
	<script>


		const tbody = document.querySelector("#list");
		const searchText = document.querySelector("#searchInput");

		const itemCount = document.querySelector("#itemsPerPage");

		function insertTable(page) {
			const filterName = searchText.value;

			const countInPage = itemCount.value;
			const rows = tbody.querySelectorAll("tr");

			let count = 0;

			rows.forEach(row => {
				const name = row.querySelector("#listName").innerText.toLowerCase();
				const email = row.querySelector("#listEmail").innerText.toLowerCase();

				const isNameMatch = name.includes(filterName);
				const isEmailMatch = email.includes(filterName);
				if (isNameMatch || isEmailMatch) {
					count++;
					row.style.display = count > (page - 1) * countInPage && count < page * countInPage + 1 ? "" : "none";
				}
				else {
					row.style.display = "none";
				}
			});
			if (count <= 0) {
				document.querySelector("#empty").classList.remove("d-none");
			} else {
				document.querySelector("#empty").classList.add("d-none");
			}

			pagination(count, page);
		}

		function pagination(count, page) {
			const countInPage = itemCount.value;
			const pageCount = Math.ceil(count / countInPage);

			const divPage = document.querySelector("#pagination");
			divPage.innerHTML = "";

			const ul = document.createElement("ul");
			ul.className = "pagination justify-content-center";

			const firstLi = document.createElement("li");
			if (page === 1) {
				firstLi.className = "page-item disabled";
			}
			else {
				firstLi.className = "page-item cursor";
				firstLi.onclick = () => insertTable(page - 1);
			}
			firstLi.innerHTML = `<div class="page-link" >&#9664;</div>`;
			ul.appendChild(firstLi);

			for (let i = 1; i <= pageCount; i++) {
				const midLi = document.createElement("li");
				if (page === i) {
					midLi.className = "page-item active cursor";
				}
				else {
					midLi.className = "page-item cursor";
				}
				midLi.innerHTML = `<div class="page-link">${i} <span class="sr-only">(current)</span></div>`;
				midLi.onclick = () => insertTable(i);
				ul.appendChild(midLi);
			}

			const lastLi = document.createElement("li");
			if (page === pageCount) {
				lastLi.className = "page-item disabled";
			}
			else {
				lastLi.className = "page-item cursor";
				lastLi.onclick = () => insertTable(page + 1);
			}
			lastLi.innerHTML = `<div class="page-link">&#9654;</div>`;
			ul.appendChild(lastLi);
			divPage.appendChild(ul);
		}

		searchText.addEventListener("input", () => insertTable(1));
		itemCount.addEventListener("change", () => insertTable(1));

		insertTable(1);
	</script>
