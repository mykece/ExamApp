@model List<BAExamApp.Dtos.BreadcrumbItem.BreadcrumbItemDto>

<div class="breadcrumb-holder">
    <ul class="basic-breadcrumbs">
        @foreach (var item in Model)
        {
            if (item.IsActive)
            {
                <li class="breadcrumb-item active" aria-current="page">@SharedLocalizer[@item.Title]</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="@item.Url">@SharedLocalizer[@item.Title]</a></li>
            }
        }
    </ul>
</div>

